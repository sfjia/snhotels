<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="i18n" />
	<constant name="struts.i18n.reload" value="false" />
	<constant name="struts.convention.classes.reload" value="false" />
	<constant name="struts.convention.action.packages" value="com.fengyun.web.action" />
	<constant name="struts.serve.static.browserCache" value="true" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.convention.action.suffix" value="Action" />
	<constant name="struts.convention.action.mapAllMatches" value="true" />
	<constant name="struts.action.extension" value="htm" />
	<constant name="struts.convention.default.parent.package" value="hotel" />
	<constant name="struts.freemarker.manager.classname" value="freemarkerManager" />
	<constant name="struts.multipart.maxSize" value="16777216"/>
		<package name="hotel" extends="json-default" namespace="/">
			<result-types>
				<result-type name="json" class="org.apache.struts2.json.JSONResult" />
			</result-types>
		</package>

</struts>
